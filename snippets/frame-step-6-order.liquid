<div class="frame-grid edges-step" data-step="4" js-edges-step js-frame-step>
    <div class="alpha">
        <div class="img-wrap">
            {% if product.metafields.custom.align_step_image != blank %}
                <img src="{{ product.metafields.custom.align_step_image | image_url: width: '800x' }}" alt="{{ product.metafields.custom.align_step_image.alt }}">
            {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder__svg' }}
            {% endif %}
        </div>
    </div>
    <div class="beta" data-scrollable>
        <div class="meta-contents mob-contents-left">
            <h2 class="frame-title">One more thing...</h2>
            <p class="frame-text">Do the left and right edges of your mirror align with the edges of your vanity?). {% if hasProductMetaDrawer %}
                <span class="trigger-btn" js-trigger-btn data-trigger-id="Info-Drawer">Why do we need this info?</span>
            {% endif %}</p>
            <div class="edges-parameter-grid">
                <div class="edges-parameter" data-parameter-name="_edges_align_{{ order.id }}{{ line_item.key }}{{ lineitemNumber }}" js-edge-parameter>
                    <div class="edge-img">
                        <img src="{{ "align-sample.png" | file_img_url: 'master' }}" alt="">
                    </div>
                    <span class="edges-label">yes</span>
                    <span class="edges-text">They are aligned</span>
                    <input class="hide-field" type="radio" name="properties[edges_align]" data-name="properties[edges_align]" data-oversize-name="items[0][properties][edges_align]" value="Yes" form="{{ formId }}">
                </div>
                <div class="edges-parameter" data-parameter-name="_edges_align_{{ order.id }}{{ line_item.key }}{{ lineitemNumber }}" js-edge-parameter>
                    <div class="edge-img">
                        <img src="{{ "unalign-sample.png" | file_img_url: 'master' }}" alt="">
                    </div>
                    <span class="edges-label">no</span>
                    <span class="edges-text">They donâ€™t align</span>
                    <input class="hide-field" type="radio" name="properties[edges_align]" data-name="properties[edges_align]" data-oversize-name="items[0][properties][edges_align]" value="No" form="{{ formId }}">
                </div>
            </div>
            <!-- <span class="skip-btn" js-skip-btn>Skip and add later</span> -->
        </div>
    </div>
</div>