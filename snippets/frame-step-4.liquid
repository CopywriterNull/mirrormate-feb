    <div class="beta" data-scrollable>
        <div class="meta-contents mob-contents-left">
            <h2 class="frame-title">Measure the space around your mirror</h2>
            <p class="frame-text">Measure from the mirror’s edge to the nearest obstruction (light fixture, outlet, backsplash, or wall). 
            {% if hasProductMetaDrawer %}
                <span class="trigger-btn" js-trigger-btn data-trigger-id="Info-Drawer">Why do we need this info?</span>
            {% endif %}
            </p>
            {% if hasMeasurementModel %}
                <div class="frame-info-grid" js-trigger-btn data-trigger-id="Measurement-Model">
                    <div class="frame-info-icon">
                        <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M1.5 9H2.33333M9 1.5V2.33333M15.6667 9H16.5M3.66667 3.66667L4.25 4.25M14.3333 3.66667L13.75 4.25M7.08333 13.1667H10.9167M6.5 12.3333C5.80039 11.8086 5.28361 11.0771 5.02286 10.2424C4.76211 9.40763 4.77061 8.51202 5.04715 7.68238C5.3237 6.85275 5.85427 6.13116 6.56371 5.61982C7.27315 5.10849 8.12549 4.83333 9 4.83333C9.87451 4.83333 10.7269 5.10849 11.4363 5.61982C12.1457 6.13116 12.6763 6.85275 12.9528 7.68238C13.2294 8.51202 13.2379 9.40763 12.9771 10.2424C12.7164 11.0771 12.1996 11.8086 11.5 12.3333C11.1746 12.6554 10.9297 13.0495 10.7849 13.4839C10.6401 13.9182 10.5996 14.3805 10.6667 14.8333C10.6667 15.2754 10.4911 15.6993 10.1785 16.0118C9.86595 16.3244 9.44203 16.5 9 16.5C8.55797 16.5 8.13405 16.3244 7.82149 16.0118C7.50893 15.6993 7.33333 15.2754 7.33333 14.8333C7.40038 14.3805 7.35988 13.9182 7.21511 13.4839C7.07034 13.0495 6.82536 12.6554 6.5 12.3333Z" stroke="#2D4256" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </div>
                    <span class="frame-info-label">
                        Round down to the nearest <u>1/8 inch</u>
                    </span>
                </div>
            {% endif %}
            <div class="space-around space-parameters">
                <div class="frame-box">
                    <div class="box-img">
                        <img src="{{ "frame-box.png" | file_img_url }}" alt="">
                    </div>
                    <div class="rest-parameter top-parameter">
                        <span class="parameter-label">Top</span>
                        <div class="rest-select is-unselected" js-parameter>
                            <select name="properties[_clearance_top]" data-name="properties[_clearance_top]" data-oversize-name="items[0][properties][_clearance_top]" js-parameter-option form="{{ formId }}" data-parameter-name="top-space">
                                <option value="0">--</option>
                                <option value="0">0</option>
                                <option value="1/8">1/8</option>
                                <option value="1/4">1/4</option>
                                <option value="3/8">3/8</option>
                                <option value="1/2">1/2</option>
                                <option value="5/8">5/8+</option>
                            </select>
                        </div>
                    </div>
                    <div class="rest-parameter right-parameter">
                        <span class="parameter-label">Right</span>
                        <div class="rest-select is-unselected" js-parameter>
                            <select name="properties[_clearance_right]" data-name="properties[_clearance_right]" data-oversize-name="items[0][properties][_clearance_right]" js-parameter-option form="{{ formId }}" data-parameter-name="right-space">
                                <option value="0">--</option>
                                <option value="0">0</option>
                                <option value="1/8">1/8</option>
                                <option value="1/4">1/4</option>
                                <option value="3/8">3/8</option>
                                <option value="1/2">1/2</option>
                                <option value="5/8">5/8+</option>
                            </select>
                        </div>
                    </div>
                    <div class="rest-parameter bottom-parameter">
                        <span class="parameter-label">Bottom</span>
                        <div class="rest-select is-unselected" js-parameter>
                            <select name="properties[_clearance_bottom]" data-name="properties[_clearance_bottom]" data-oversize-name="items[0][properties][_clearance_bottom]" js-parameter-option form="{{ formId }}" data-parameter-name="bottom-space">
                                <option value="0">--</option>
                                <option value="0">0</option>
                                <option value="1/8">1/8</option>
                                <option value="1/4">1/4</option>
                                <option value="3/8">3/8</option>
                                <option value="1/2">1/2</option>
                                <option value="5/8">5/8+</option>
                            </select>
                        </div>
                    </div>
                    <div class="rest-parameter left-parameter">
                        <span class="parameter-label">Left</span>
                        <div class="rest-select is-unselected" js-parameter>
                            <select name="properties[_clearance_left]" data-oversize-name="items[0][properties][_clearance_left]" data-name="properties[_clearance_left]" js-parameter-option form="{{ formId }}" data-parameter-name="left-space">
                                <option value="0">--</option>
                                <option value="0">0</option>
                                <option value="1/8">1/8</option>
                                <option value="1/4">1/4</option>
                                <option value="3/8">3/8</option>
                                <option value="1/2">1/2</option>
                                <option value="5/8">5/8+</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <input type="hidden" form="{{ formId }}" name="properties[_locationTop]" data-name="properties[_locationTop]" data-oversize-name="items[0][properties][_locationTop]" value="" js-location-top-field>
            <input type="hidden" form="{{ formId }}" name="properties[_locationBottom]" data-name="properties[_locationBottom]" data-oversize-name="items[0][properties][_locationBottom]" value="" js-location-bottom-field>
            <input type="hidden" form="{{ formId }}" name="properties[_locationLeft]" data-name="properties[_locationLeft]" data-oversize-name="items[0][properties][_locationLeft]" value="" js-location-left-field>
            <input type="hidden" form="{{ formId }}" name="properties[_locationRight]" data-name="properties[_locationRight]" data-oversize-name="items[0][properties][_locationRight]" value="" js-location-right-field>

            {% comment %} <input type="hidden" form="{{ formId }}" name="properties[_replacement_clips]" data-name="properties[_replacement_clips]" data-oversize-name="items[0][properties][_replacement_clips]" value="N/A"> {% endcomment %}

            <div class="continue-btn disabled" js-continue-btn>continue</div>
            {% if user_type == "r" %}
                <span class="skip-btn skip-model-btn" js-trigger-btn data-trigger-id="Skip-Measurement-Model">Buy Now, Measure Later™</span>
            {% else %}
                <span class="gap-bottom hide-mobile"></span>
            {% endif %}
            {% render "frame-faqs", hideMainAccordion: true, class: "hide-desktop" %}
            {% render "space-dimension-model" %}
        </div>
    </div>
</div>