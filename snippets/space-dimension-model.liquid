{% if shop.metaobjects.space_dimension_model.values_count > 0 %}
    {% assign spaceDimensionMeta = shop.metaobjects.space_dimension_model.values | first %}

    <div class="dimension-model measurement-model" id="Space-Dimension-Model">
        <div class="frame-overlay" js-overlay></div>
        <div class="model-main">
            <div class="model-main-inner">
                <div class="model-close-btn" js-trigger-close>
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <g>
                        <path d="M19.0703 4.92896L4.92818 19.0711" stroke="#2D4256" stroke-width="2" stroke-linecap="square" stroke-linejoin="round"/>
                        <path d="M19.0718 19.0711L4.92969 4.92896" stroke="#2D4256" stroke-width="2" stroke-linecap="square" stroke-linejoin="round"/>
                        </g>
                        <defs>
                        <clipPath id="clip0_2782_57782">
                        <rect width="24" height="24" fill="white"/>
                        </clipPath>
                        </defs>
                    </svg>            
                </div>
                {% if spaceDimensionMeta.image != blank %}
                    <div class="model_img">
                        <img src="{{ spaceDimensionMeta.image |  image_url: width: '500x' }}" alt="{{ spaceDimensionMeta.image.alt }}">
                    </div>
                {% endif %}
                <div class="model-rte">
                    {% if spaceDimensionMeta.title != blank %}
                        <h3 class="model-title">{{ spaceDimensionMeta.title }}</h3>
                    {% endif %}
                    {% if spaceDimensionMeta.text != blank %}
                        <div class="model-text">{{ spaceDimensionMeta.text | metafield_tag }}</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endif %}