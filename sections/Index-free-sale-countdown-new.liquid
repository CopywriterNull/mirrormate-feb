{% schema %}
  {
    "name": "Index Free Sale Countdown",
    "class": "Index_free_sale_countdown_new",
    "settings": [
      {
        "type": "checkbox",
        "id": "hide_for_desktop",
        "label": "Hide Section for Desktop"
      },
      {
        "type": "color",
        "id": "main_background_color",
        "label": "Add Main Background Color",
        "default": "#F6F3F2"
      },
      {
        "type": "video",
        "id": "main_full_video",
        "label": "Add Main Full Video"
      },
      {
        "type": "image_picker",
        "id": "main_full_image",
        "label": "Add Main Full Image"
      },
      {
        "type": "textarea",
        "id": "timerdate",
        "label": "Add Main Timer Date",
        "info": "Date Format : 2024-07-15 24:00:00 ETC.."
      },
      {
        "type": "textarea",
        "id": "main_sub_heading_text",
        "label": "Add Main Sub Heading Text",
        "default": "Need Help Deciding?"
      },
      {
        "type": "textarea",
        "id": "main_heading_text",
        "label": "Add Main Heading Text",
        "default": "Shop Our FREE<br>Sample Sale"
      },
      {
        "type": "richtext",
        "id": "main_information_text",
        "label": "Add Main Information Text",
        "default": "<p>Buy one get one FREE sample sale, available for a limited time only</p>"
      },
      {
        "type": "text",
        "id": "main_button_text",
        "label": "Add Main Button Text",
        "default": "Shop Now"
      },
      {
        "type": "url",
        "id": "main_button_link",
        "label": "Add Main Button Link",
        "default": "/"
      }
    ],
    "presets": [
      {
        "name": "Index Free Sale Countdown"
      }
    ]
  }
{% endschema %}