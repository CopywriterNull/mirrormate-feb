  <div class="Index_free_sale_countdown_main_new {% if section.settings.hide_for_desktop == true %} Index_free_sale_countdown_hide_desktop_new {% endif %}" style="background: {{ section.settings.main_background_color }};">
    <div class="Index_free_sale_countdown_inner_new" data-aos="fade-in">
      {%- if section.settings.main_full_video != blank or section.settings.main_full_image != blank -%}
        <div class="Index_free_sale_countdown_mainboths_new">
          <div class="Index_free_sale_countdown_innerboths_new">
            {%- if section.settings.main_full_video != blank -%}
              <div class="Index_free_sale_countdown_innerboths_videoimage_new">
                {{ section.settings.main_full_video | video_tag: image_size: 'master', controls: false, autoplay: true, loop: true }}
              </div>
            {% else %}  
              {%- if section.settings.main_full_image != blank -%}
                <div class="Index_free_sale_countdown_innerboths_videoimage_new">
                  {{
                    section.settings.main_full_image | 
                    image_url: width: img.width | 
                    image_tag: widths: '750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                    fetchpriority: 'auto', 
                    class:'Common_image_new'
                  }}
                </div>
              {%- endif -%}
            {%- endif -%}
          </div>
        </div>
      {%- endif -%}
      {%- if section.settings.timerdate != blank or section.settings.main_sub_heading_text != blank or section.settings.main_heading_text != blank or section.settings.main_information_text != blank or section.settings.main_button_link != blank -%}
        <div class="Index_free_sale_countdown_maindetail_new">
          <div class="Index_free_sale_countdown_innerdetail_new">
            {%- if section.settings.timerdate != blank -%}
              <div class="Index_free_sale_countdown_innerdetail_maintimer_new">
                <div class="Index_free_sale_countdown_innerdetail_innertimer_new">
                  <div id="flipdown_{{ section.id | replace: '-', '_' }}" class="flipdown flipdown_small_timer flipdown_{{ section.id | replace: '-', '_' }}"></div>
                </div>
              </div>
            {%- endif -%}
            {%- if section.settings.main_sub_heading_text != blank -%}
              <div class="Index_free_sale_countdown_innerdetail_texts_new">
                <h4>{{ section.settings.main_sub_heading_text }}</h4>
              </div>
            {%- endif -%}
            {%- if section.settings.main_heading_text != blank -%}
              <div class="Common_title_new Index_free_sale_countdown_innerdetail_title_new">
                <h2>{{ section.settings.main_heading_text }}</h2>
              </div>
            {%- endif -%}
            {%- if section.settings.main_information_text != blank -%}
              <div class="Index_free_sale_countdown_innerdetail_infos_new">
                {{ section.settings.main_information_text }}
              </div>
            {%- endif -%}
            {%- if section.settings.main_button_text != blank and section.settings.main_button_link != blank -%}
              <div class="Index_free_sale_countdown_innerdetail_button_new">
                <a href="{{ section.settings.main_button_link }}" class="button">
                  {{ section.settings.main_button_text }}
                </a>
              </div>
            {%- endif -%}
          </div>
        </div>
      {%- endif -%}  
    </div>
  </div>
{%- endif -%}  

