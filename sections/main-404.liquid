<style type="text/css">
  .template-404-page {
      margin: 57px 0 68px 0;
  }
  .template-404-inner {
      position:relative;
      min-height: 560px;
      display: flex;
      align-items: center;
      justify-content: center;

  }
  .template-404 .title + * {
    margin-top: 1rem;
  }
.template-404 .image1 {
   position: absolute;
    width: 262px;
    height: 182px;
    overflow: hidden;
    border-radius: 8px;
  left: 153px;
      top: 0;
  }

  .template-404 .image1 img {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100% !important;
    object-fit: cover;
    border-radius: 8px;
  }

  .template-404 .image2 {
   position: absolute;
    width: 228px;
    height: 263px;
    overflow: hidden;
    border-radius: 8px;
    right: 75px;
    top: -7px;
  }

  .template-404 .image2 img {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100% !important;
    object-fit: cover;
    border-radius: 8px;
  }

  .template-404 .image3 {
   position: absolute;
    width: 226px;
    height: 263px;
    overflow: hidden;
    border-radius: 8px;
     left: 82px;
    bottom: 6px;
  }

  .template-404 .image3 img {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100% !important;
    object-fit: cover;
    border-radius: 8px;
  }

  .template-404 .image4 {
   position: absolute;
    width: 262px;
    height: 182px;
    overflow: hidden;
    border-radius: 8px;
    right: 125px;
    bottom: 12px;
  }

  .template-404 .image4 img {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100% !important;
    object-fit: cover;
    border-radius: 8px;
  }

  .template-404 .content-part .sub-title {
    letter-spacing: 0.28px;
    font-size: 14px;
    line-height: 18.9px;
    font-weight: 600;
    margin: 0px 0 16px 0;
    text-transform: uppercase;
  }
