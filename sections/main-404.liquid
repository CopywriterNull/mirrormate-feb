    letter-spacing: -1px;
    font-size: 56px;
    line-height: 59.36px;
    margin: 0 0 24px 0;
  }
  .template-404 .content-part .button {
    min-width: 312px;
    margin: 0;
  }
.template-404 .content-part {
      max-width: 430px;
}
  @media screen and (min-width: 750px) {
    .template-404 .title + * {
      margin-top: 2rem;
    }
  }

  @media screen and (max-width: 749px) {
    .template-404 .image1 {
        width: 128px;
        height: 100px;
        left: 11px;
        top: 18px;
    }
    .template-404-page {
    margin: 32px 0 53px 0;
    }
    .template-404 .image2 {
        width: 97px;
        height: 118px;
        right: 29px;
        top: 0;
    }
    .template-404-inner {
        min-height: 496px;
    }
    .template-404 .content-part {
    max-width: 335px;
              margin-bottom: 17px;
   }
    .template-404 .content-part .sub-title {
    margin: 0px 0 12px 0;
   }
    .template-404 .content-part .title {
    letter-spacing: -0.1px;
    font-size: 32px;
    line-height: 36.8px;
    margin: 0 0 16px 0;
  }
    .template-404 .content-part .button {
      min-width: 277px;
      margin: 0;
  }
    .template-404 .image3 {
      width: 101px;
      height: 125px;
      left: 25px;
      bottom: 0;
   }
    .template-404 .image4 {
      width: 98px;
      height: 95px;
      right: 28px;
      bottom: 31px;
   }
  }

  @media screen and (min-width: 750px) and (max-width: 1024px) {
    .template-404 .image1 {
        width: 212px;
        height: 132px;
        left: 45px;
        top: 0;
   }
    .template-404 .image2 {
        width: 173px;
        height: 213px;
        right: 0;
        top: 0;
   }
    .template-404 .image3 {
      width: 226px;
      height: 263px;
      left: 0;
      bottom: 0;
      width: 173px;
      height: 213px;
   }
    .template-404 .image4 {
    right: 45px;
    bottom: 10px;
    width: 212px;
    height: 132px;
   }
    .template-404 .content-part .title {
        font-size: 53px;
        line-height: 54.36px;
        margin: 0 0 22px 0;
    }
  }
   @media screen and (min-width: 1025px) and (max-width: 1190px) {
    .template-404-inner {
        min-height: 600px;
    }
    .template-404 .image1 {
       left: 90px;
       top: 0;
    }
     .template-404 .image2 {
      right: 47px;
      top: 0;
   }
    .template-404 .image3 {
      left: 47px;
      bottom: 0px;
    }
    .template-404 .image4 {
          right: 90px;
         bottom: 22px;
    }
    .template-404 .content-part .button {
        min-width: 253px;
    }
    .template-404 .content-part .title {
        font-size: 51px;
        line-height: 54.36px;
    }
   }
</style>

<div class="template-404-page page-width page-margin center">

 <div class="template-404-inner">
  {%- if section.settings.image1 != blank -%}
     <div class="image1">
            {{
              section.settings.image1 | 
              image_url: width: img.width | 
              image_tag: widths: '170, 200, 226, 262, 293, 300, 250', 
              fetchpriority: 'auto', 
              class:''
            }}
       </div>
  {%- endif -%}
  

   {%- if section.settings.image2 != blank -%}
      <div class="image2">
            {{
              section.settings.image2 | 
              image_url: width: img.width | 
              image_tag: widths: '170, 200, 226, 262, 293, 300, 250', 
              fetchpriority: 'auto', 
              class:''
            }}
      </div>
  {%- endif -%}
  {%- if section.settings.image3 != blank -%}
     <div class="image3">
            {{
              section.settings.image3 | 
              image_url: width: img.width | 
              image_tag: widths: '170, 200, 226, 262, 293, 300, 250', 
              fetchpriority: 'auto', 
              class:''
            }}
     </div>
  {%- endif -%}

  {%- if section.settings.image4 != blank -%}
     <div class="image4">
            {{
              section.settings.image4 | 
              image_url: width: img.width | 
              image_tag: widths: '170, 200, 226, 262, 293, 300, 250', 
              fetchpriority: 'auto', 
              class:''
            }}
     </div>
  {%- endif -%}
  
  <div class="content-part">
  {%- if section.settings.sub_title != blank -%}
    <p class="sub-title">
      {{ section.settings.sub_title | escape }}
    </p>
  {%- endif -%}
  
  {%- if section.settings.title != blank -%}
    <h1 class="title">
      {{ section.settings.title }}
    </h1>
  {%- endif -%}

    {%- if section.settings.btn_text != blank -%}
      <a href="{{ section.settings.btn_url }}" class="button">
        {{ section.settings.btn_text | escape }}
      </a>
    {%- endif -%}
  </div>
 </div>
</div>


{% schema %}
  {
    "name": "Main-404",
    "settings": [
      {
        "type": "image_picker",
         "id": "image1",
        "label": "Image 1"
      },
      {
        "type": "image_picker",
         "id": "image2",
        "label": "Image 2"
      },
      {
        "type": "image_picker",
         "id": "image3",
        "label": "Image 3"
      },
      {
        "type": "image_picker",
         "id": "image4",
        "label": "Image 4"
      },
      {
        "type": "text",
         "id": "sub_title",
        "label": "Sub-title"
      },
      {
        "type": "text",
         "id": "title",
        "label": "Title"
      },

      {
        "type": "text",
         "id": "btn_text",
        "label": "Button text"
      },
      {
        "type": "url",
         "id": "btn_url",
        "label": "Button link"
      }
    ]
   
  }
{% endschema %}