          {
            "type": "url",
            "id": "card_link",
            "label": "Add Card Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Page 3 Column Cards Section V2",
        "blocks": [
          {
            "type": "column-card"
          }
        ]
      }
    ]
  }
{% endschema %}