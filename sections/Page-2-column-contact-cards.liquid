{{ "Page-2-column-contact-cards.css" | asset_url | stylesheet_tag }}

{% if section.settings.main_heading_text != blank or section.settings.main_information_text != blank or section.blocks.size > 0 %}
  <div class="Page_2_column_contact_cards_main Page_2_column_contact_cards_main_{{ section.id }}" style="background-color: {{ section.settings.main_background_color }}" data-aos="fade-up">
    <div class="page-width">
      <div class="Page_2_column_contact_cards_inner">
        {% if section.settings.main_heading_text != blank or section.settings.main_information_text != blank %}
          <div class="Page_2_column_contact_cards_main_heading_container">
            {% if section.settings.main_heading_text != blank %}
              <div class="Page_2_column_contact_cards_main_heading_text">
                <h3>
                  {{ section.settings.main_heading_text }}
                </h3>
              </div>
            {% endif %}
            {% if section.settings.main_information_text != blank %}
              <div class="Page_2_column_contact_cards_main_information_text">
                {{ section.settings.main_information_text }}
              </div>
            {% endif %}
          </div>
        {% endif %}
        {% if section.blocks.size > 0 %}
          <div class="Page_2_column_contact_cards_main_grid">
            {% for block in section.blocks %}
              {% if block.type == "contact-card" %}
                {% if block.settings.card_title != blank or block.settings.contact_number != blank or block.settings.contact_email != blank or block.settings.card_image != blank %}
                  <div class="Page_2_column_contact_card" style="background-color: {{ block.settings.card_background_color }}">
                    {% if block.settings.card_title != blank or block.settings.contact_number != blank or block.settings.contact_email != blank %}
                      {% if block.settings.card_title != blank  %}
                        <div class="Page_2_column_contact_card_title">
                          <h6>
                            {{ block.settings.card_title }}
                          </h6>
                        </div>
                      {% endif %}
                      {% if block.settings.contact_number != blank or block.settings.contact_email != blank %}
                        <div class="Page_2_column_card_contact_deatils">
                          {% if block.settings.contact_number != blank %}
                            <div class="Page_2_column_card_contact_main">
                              <div class="contact_icon call_icon"> 
