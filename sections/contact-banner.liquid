                        <div class="Contact_detail">
                          <a target="_blank" href="{{ section.settings.contact_number_link }}">
                            {{ section.settings.contact_number_text }}
                          </a>
                        </div>
                      </div>
                    {% endif %}
                    {% if section.settings.contact_email_link != blank and section.settings.contact_email_text != blank %}
                      <div class="Contact_banner_left_single_contact_detail">
                        <div class="Contact_icon">
                          <svg width="24" height="25" viewBox="0 0 24 25" fill="none" xmlns="http://www.w3.org/2000/svg">
