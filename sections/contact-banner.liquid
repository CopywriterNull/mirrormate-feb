{{ "contact-banner.css" | asset_url | stylesheet_tag }}

{% if section.settings.main_heading_text != blank or section.settings.main_information_text != blank or section.settings.contact_number_link != blank or section.settings.contact_email_link != blank or section.settings.contact_adress_link != blank or section.settings.main_banner_image_desktop != blank or section.settings.main_mp4_video != blank or section.settings.main_banner_image_mobile != blank  %}
  <div class="Contact_banner_main Contact_banner_main_{{ section.id }}" style="background-color: {{ section.settings.main_background_color }}">
    <div class="page-width">
      <div class="Contact_banner_inner">
        <div class="Contact_banner_sides">
          {% if section.settings.main_heading_text != blank or section.settings.main_information_text != blank or section.settings.contact_number_text != blank or section.settings.contact_email_link != blank or section.settings.contact_address_text != blank %}
            <div class="Contact_banner_leftmain">
              <div class="Contact_banner_leftinner">
                {% if section.settings.main_heading_text != blank or section.settings.main_information_text != blank %}
                  <div class="Contact_banner_left_main_heading_part">
                    {% if section.settings.main_heading_text != blank %}
                      <div class="Contact_banner_left_main_heading_text Common_title_new">
                        <h2>
                          {{ section.settings.main_heading_text }}
                        </h2>
                      </div>
                    {% endif %}
                    {% if section.settings.main_information_text != blank %}
                      <div class="Contact_banner_left_main_information_text">
                        {{ section.settings.main_information_text }}
                      </div>
                    {% endif %}
                  </div>
                {% endif %}
                {% if section.settings.contact_number_link != blank or section.settings.contact_email_link != blank or section.settings.contact_adress_link != blank %}
                  <div class="Contact_banner_left_contact_details_part">
