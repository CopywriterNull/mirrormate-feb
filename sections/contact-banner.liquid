                          </svg>
                        </div>
                        <div class="Contact_detail">
                          <a target="_blank" href="{{ section.settings.contact_adress_link }}">
                            {{ section.settings.contact_address_text }}
                          </a>
                        </div>
                      </div>
                    {% endif %}
                  </div>
                {% endif %}
              </div>
            </div>
          {% endif %}
          {% if section.settings.main_banner_image_desktop != blank or section.settings.main_mp4_video_desktop != blank or section.settings.main_banner_image_mobile != blank or section.settings.main_mp4_video_mobile != blank %}
            <div class="Contact_banner_rightmain">
              <div class="Contact_banner_rightinner">
                {%- if section.settings.main_mp4_video != blank -%}
                  <div class="Contact_banner_right_video_image_main">
                    {{ section.settings.main_mp4_video | video_tag: image_size: 'master', controls: false, autoplay: true, loop: true }}
                  </div>
                  {% else %}  
                    {%- if section.settings.main_banner_image_desktop != blank and section.settings.main_banner_image_mobile != blank -%}
                      <div class="Contact_banner_right_video_image_main">
                            {%- if section.settings.main_banner_image_desktop != blank -%}
                              {{
                                section.settings.main_banner_image_desktop | 
                                image_url: width: img.width | 
                                image_tag: widths: '750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                fetchpriority: 'auto', 
                                class:'desktop_image_new'
                              }}
                            {%- endif -%}
                            {%- if section.settings.main_banner_image_mobile != blank -%}
                              {{
                                section.settings.main_banner_image_mobile | 
                                image_url: width: img.width | 
                                image_tag: widths: '750, 900, 1080, 1296, 1512, 1728, 1944, 2048', 
                                fetchpriority: 'auto', 
                                class:'mobile_image_new'
                              }}
                            {%- endif -%}
                          </div>
                    {%- endif -%}
                {% endif %}
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endif %}
  
{% schema %}
  {
    "name": "Contact Banner",
    "class": "Contact_banner",
    "settings": [
      {
        "type": "color",
        "id": "main_background_color",
        "label": "Add Main Background Color",
        "default": "#FFF"
      },
      {
        "type": "video",
        "id": "main_mp4_video",
        "label": "Add Main MP4 Video"
      },
      {
        "type": "image_picker",
        "id": "main_banner_image_desktop",
        "label": "Add Main Banner Image Desktop"
      },
      {
        "type": "image_picker",
        "id": "main_banner_image_mobile",
        "label": "Add Main Banner Image Mobile"
      },
      {
        "type": "textarea",
        "id": "main_heading_text",
        "label": "Add Main Heading Text",
        "default": "Contact Us"
      },
      {
        "type": "textarea",
        "id": "main_information_text",
        "label": "Add Main Information Text",
        "default": "<p>For Multifamily sales, contact Dustin Murphy at:</p>"
      },
      {
        "type": "header",
        "content": "Contact Number"
      },
      {
        "type": "text",
        "id": "contact_number_text",
        "label": "Add Contact Number",
        "default": "(704) 390-7378"
      },
      {
        "type": "url",
        "id": "contact_number_link",
        "label": "Add Contact Number Link"
      },
      {
        "type": "header",
        "content": "Contact Email"
      },
      {
        "type": "text",
        "id": "contact_email_text",
        "label": "Add Contact Email",
        "default": "info@cabinetmate.com"
      },
      {
        "type": "url",
        "id": "contact_email_link",
        "label": "Add Contact Email Link"
      },
    ],
    "presets": [
      {
        "name": "Contact Banner"
      }
    ]
  }
{% endschema %}